.pg-order {
  text-align: left;
  margin: 0;

  @media (max-width: 768px) {
    margin-right: 0;
  }

  @media (min-width: 640px) and (max-width: 992px) {
    flex: 1;
    margin-left: var(--gap);
  }

  &__error {
    display: block;
    margin: calc(var(--gap) * 2);
    text-align: center;
    color: var(--order-error-color);
  }

  .cr-loader {
    filter: brightness(0.1);
  }

  .cr-input, .cr-input__number, .cr-order-input__input {
    max-width: 90% !important;
    width: 60%;

    input {
      text-align: right;
    }
  }

  .cr-order {
    &-item {
      &__content {
        width: 100%;
      }
    }

    .cr-dropdown {
      &__input {
        background-color: var(--base-bright);
        border-radius: 3px;
        border: solid 1px var(--dropdown-border);
        &--open {
          border-radius: 3px;
          border-bottom: solid 1px var(--dropdown-border);
          color: var(--background-dropdown-text);
          background-color: var(--table-dark-header-color);
        }
        &-label {
          text-shadow: 0 0 0 var(--base-3);
          font-size: 14px;
          font-weight: var(--font-weight);
          line-height: calc(var(--gap) * 5.75);
          margin-left: calc(var(--gap) * 1.5);
        }
        &-icon {
          margin-right: calc(var(--gap) * 2);
        }
      }

      &__list {
        color: var(--base-3);
        border: 0px;
        border-radius: 3px;
        background: var(--background-dropdown);
        line-height: calc(var(--gap) * 5);
        padding-top: 6px;
        margin-top: 3px;

        &-item {
          &:hover {
            color: var(--color-white);
            background: var(--background-dropdown-hover);
          }
          &-label {
            background: transparent;
            font-size: 16px;
            margin-left: calc(var(--gap) * 1.5);
          }
        }
      }
    }
    .cr-tab-panel {
      background-color: inherit;

      .cr-tab {
        background-color: inherit;
        cursor: pointer;
        line-height: calc(var(--gap) * 4);
        width: 100%;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;

        &__active {
          color: var(--markets-filter-active-color);
          padding: 0;
        }

        &__pointer {
          position: absolute;
          height: 1px;
          margin-bottom: 1px;
        }
      }

      .cr-tab-content {
        padding: calc(var(--gap) * 2);
        padding-top: 0;

        &:nth-child(2), &:last-child {
          .cr-button {
            color: var(--color-white);
            font-size: calc(var(--gap) * 2.6);
            font-weight: normal;
            outline: none;
            padding: calc(var(--gap) * 1.3);

            &--disabled {
              opacity: 0.5;
            }
          }
        }
      }

      .cr-tab-content:nth-child(2) {
        .cr-button {
          background: var(--orders-button-green-normal);
          
          &:hover  {
            background: var(--orders-button-green-hover);
          }
          &:active  {
            background: var(--orders-button-green-active);
          }
        }
      }

      .cr-tab-content:last-child  {
        .cr-button {
          background: var(--orders-button-red-normal);
          
          &:hover  {
            background: var(--orders-button-red-hover);
          }
          &:active  {
            background: var(--orders-button-red-active);
          }
        }
      }

      &__navigation-container {
        background-color: var(--profile-activity-header);
        display: inline-block;
        margin-bottom: calc(var(--gap) * 2);
        width: 100%;

        &-navigation {
          box-shadow: none;
          height: calc(var(--gap) * 5.3);
        }
      }
    }

    .cr-order-item__label {
      color: var(--create-order-text);
      font-size: 1em;
      font-weight: var(--font-weight);
      line-height: 2.3em;
      background-color: inherit;
      text-align: left;

      &-available {
        color: var(--base-3);
      }

      &-fee {
        color: var(--base-3);
      }
    }

    .cr-order-item__content {
      background-color: inherit;

      .cr-order-input {
        display: flex;
        align-items: flex-end;
        border: 1px solid var(--base-3);
        border-radius: 27px;
        line-height: calc(var(--gap) * 3.66);

        &__crypto-icon {
          border: none;
          border-right: 1px solid var(--base-3);
          /* border-color: #efeff0; */
          width: auto;

          [class^=cr-crypto-font] {
            color: var(--table-header-color);
            font-size: 1em;
            font-weight: normal;

            &::before {
              display: none;
            }
          }
        }

        &__input, &__price {
          border: none;
          background-color: inherit;
          line-height: calc(var(--gap) * 3.66);
          margin-right: 3px;
          padding-top: 0;
          .cr-input {
            input {
              color: var(--color-white);
              font-size: 1em;
            }
          }
        }
      }
    }

    .cr-order-item__total {
      color: var(--create-order-text);
      text-align: right;
      background-color: inherit;
      margin: calc(var(--gap) * 1.66) 0;

      .cr-order-item__content {
        color: var(--base-3);
        font-size: 14px;
        font-weight: var(--font-weight);
        background-color: inherit;
        border: none;
    }
      .cr-crypto-icon {
        border-top: none;
        border-right: none;
        border-left: none;
      }
    }

    .cr-order-item:nth-of-type(1),
    .cr-order-item:nth-of-type(2),
    .cr-order-item:nth-of-type(3) {
      display: inline;

      .cr-order-item__content {
        margin-top: -2px;
        margin-bottom: 4px;
      }
    }

    .cr-order-item:nth-of-type(4) {
      .cr-order-item__content {
        margin-top: 1em;
        color: var(--color-white);
      }
    }

    .cr-order-item:nth-of-type(5),
    .cr-order-item:nth-of-type(6) {
      justify-content: flex-end;
      color: var(--muted-text);
      .cr-order-item__content {
        margin-left: 5px;
        font-size: 12px;
        font-weight: normal;
        line-height: 14px;
        background-color: inherit;
        border: none;
        width: auto;
      }
    }
  }

  .cr-order--extended {
    display: flex;
    justify-content: space-around;

    .cr-tab-panel{
      .cr-tab-content {
        min-width: calc(var(--big-gap) * 3.5);

        &:last-child {
          .cr-button {
            color: var(--color-white);
            font-size: calc(var(--gap) * 2.6);
            font-weight: normal;
            outline: none;
            padding: calc(var(--gap) * 1.3);

            &--disabled {
              opacity: 0.5;
            }
          }
        }
      }
    }

    &__buy {
      .cr-tab-panel{
        .cr-tab-content {
          &:last-child {
            .cr-button {
              background: var(--orders-button-green-hover);

              &:hover  {
                background: var(--orders-button-green-hover);
              }

              &:active  {
                background: var(--orders-button-green-active);
              }
            }
          }
        }
      }
    }

    &__sell {
      .cr-tab-panel{
        .cr-tab-content {
          &:last-child {
            .cr-button {
              background: var(--orders-button-red-hover);

              &:hover  {
                background: var(--orders-button-red-hover);
              }

              &:active  {
                background: var(--orders-button-red-active);
              }
            }
          }
        }
      }
    }

    .cr-dropdown {
      &__input {
        background-color: inherit;
        border-radius: 27px;
        height: calc(var(--gap) * 5.5);
        width: 99%;
        &--open {
          background-color: var(--table-dark-header-color);
          border-radius: 27px;
          border-bottom: solid 1px var(--dropdown-border);
          height: calc(var(--gap) * 5.5);
          width: 99%;
        }
        &-label {
          text-shadow: 0 0 0 var(--base-3);
          font-size: 14px;
          font-weight: var(--font-weight);
          line-height: calc(var(--gap) * 5.75);
          margin-left: calc(var(--gap) * 1.5);
        }
        &-icon {
          margin-right: calc(var(--gap) * 2);
        }
      }

      &__list {
        color: var(--base-3);
        border: 0px;
        border-radius: 3px;
        background: var(--background-dropdown);
        line-height: calc(var(--gap) * 5);
        padding-top: 6px;
        margin-top: 3px;

        &-item {
          &:hover {
            color: var(--color-white);
            background: var(--background-dropdown-hover);
          }
          &-label {
            background: transparent;
            font-size: 16px;
            margin-left: calc(var(--gap) * 1.5);
          }
        }
      }
    }
    .cr-tab-panel {
      background-color: inherit;

      .cr-tab {
        background-color: inherit;
        cursor: pointer;
        line-height: calc(var(--gap) * 4);
        width: 100%;

        &__active {
          color: var(--markets-filter-active-color);
        }

        &__pointer {
          position: absolute;
          height: 1px;
          margin-bottom: 1px;
        }
      }

      .cr-tab-content {
        padding-bottom: calc(var(--gap) * 2);
        padding-top: 0;
      }

      &__navigation-container {
        background-color: var(--profile-activity-header);
        display: inline-block;
        margin-bottom: calc(var(--gap) * 2);
        width: 100%;
        border: none;

        &-navigation {
          box-shadow: none;
          display: none;
        }
      }
    }

    .cr-order-item__label {
      color: var(--create-order-text);
      font-size: 1em;
      font-weight: var(--font-weight);
      line-height: 2.3em;
      background-color: inherit;
      text-align: left;

      &-available {
        color: var(--base-3);
      }

      &-fee {
        color: var(--base-3);
      }
    }

    .cr-order-item__content {
      background-color: inherit;

      .cr-order-input {
        display: flex;
        align-items: flex-end;
        border: 1px solid var(--base-3);
        border-radius: 27px;
        line-height: calc(var(--gap) * 3.66);

        &__crypto-icon {
          border: none;
          border-right: 1px solid var(--base-3);
          /* border-color: #efeff0; */
          width: auto;
          background-color: inherit;

        [class^=cr-crypto-font] {
          color: var(--base-3);
          font-size: 1em;
          font-weight: normal;

          &::before {
            display: none;
          }
        }
        }

        &__input, &__price {
          border: none;
          background-color: inherit;
          line-height: calc(var(--gap) * 3.66);
          margin-right: 3px;
          padding-top: 0;

          .cr-input {
            input {
              color: var(--color-white);
              font-size: 1em;
            }
          }
        }
      }
    }

    .cr-order-item__total {
      color: var(--create-order-text);
      text-align: right;
      background-color: inherit;
      margin: calc(var(--gap) * 1.66) 0;

      .cr-order-item__content {
        color: var(--base-3);
        font-size: 14px;
        font-weight: var(--font-weight);
        background-color: inherit;
        border: none;
      }
      .cr-crypto-icon {
        border-top: none;
        border-right: none;
        border-left: none;
      }
    }

    .cr-order-item:nth-of-type(1),
    .cr-order-item:nth-of-type(2),
    .cr-order-item:nth-of-type(3) {
      display: inline;

      .cr-order-item__content {
        margin-top: -2px;
        margin-bottom: 4px;
      }
    }

    .cr-order-item:nth-of-type(4) {
      .cr-order-item__content {
        color: var(--color-white);
      }
    }

    .cr-order-item:nth-of-type(5),
    .cr-order-item:nth-of-type(6) {
      justify-content: flex-end;
      color: var(--muted-text);
      .cr-order-item__content {
        margin-left: 5px;
        font-size: 12px;
        font-weight: normal;
        line-height: 14px;
        background-color: inherit;
        border: none;
        width: auto;
      }
    }
  }

  @media (min-width: 997px) {
    .cr-order .cr-dropdown__input-label, .cr-order--extended .cr-dropdown__input-label {
      line-height: calc(var(--gap) * 4.6);
    }
  }

  @media (min-width: 601px) {
    .cr-input {
      input {
        max-width: 100%;
      }
    }
  }
  @media (max-width: 600px) {
    .cr-input {
      input {
        max-width: 100px;
      }
    }
  }
  @media (max-width: 500px) {
    .cr-input {
      input {
        max-width: 70px;
      }
    }
  }
  @media (max-width: 400px) {
    .cr-input {
      input {
        max-width: 50px;
      }
    }
  }
  @media (max-width: 300px) {
    .cr-input {
      input {
        max-width: 30px;
      }
    }
  }
}

.cr-wallet-trades__summary-block {
  padding-top: 15px;
  &-field {
    margin-top: 7px !important;
    margin-bottom: 7px !important;
  }
  span {
    font-size: 1.3rem !important;
  }
}
