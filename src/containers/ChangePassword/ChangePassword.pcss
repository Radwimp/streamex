.pg-change-password-form {
  display: flex;
  margin-left: calc(var(--gap) * 2);
  margin-top: calc(var(--gap) * 2);

  .pg-profile-page__btn-secondary {
    width: calc(var(--gap) * 15);
  }

  &__group {
    text-align: center;
  }

  .cr-input {
    border-bottom: 1px solid var(--profile-grey);

    input {
      color: var(--color-white);
      width: calc(var(--gap) * 12);
    }
  }

  &__label {
    color: var(--text-muted);
  }

  &__error {
    color: var(--order-error-color);
    margin: 0;
    margin-left: calc(var(--gap) * 2);
  }
}

.cr-modal {
  .pg-change-password-screen {
    display: flex;
    justify-content: center;
    width: calc(var(--gap) * 70.66);
    min-height: calc(var(--big-gap) * 6.66);
    background-size: cover;
    margin: 0 auto;
    .cr-email-form {
      background: var(--email-form-bg);
      min-height: calc(var(--big-gap) * 5);
      &__option {
        background: var(--header);
      }
      &__options-group {
        width: 100%;
        height: calc(var(--big-gap) * 0.97);
        border-bottom: calc(var(--gap) * 0.167) solid var(--email-form-border);
      }
      &__label {
        color: var(--auth-placeholder-color);
        background: var(--email-form-bg);
        position: absolute;
        top: 0px;
      }
      &__input {
        input {
          color: var(--color-white);
          font-size: calc(var(--gap) * 2.33);
          border: 1px solid var(--input-block-border-color);
          border-radius: calc(var(--gap) * 3.38);

          &::placeholder {
            color: var(--auth-placeholder-color);
          }
        }
      }
      &__header {
        width: calc(var(--big-gap) * 6.3);
        height: calc(var(--gap) * 4.33);
        font-family: Roboto;
        font-style: normal;
        font-weight: normal;
        line-height: calc(var(--gap) * 2.66);
        font-size: calc(var(--gap) * 2.33);
        color: var(--placeholder-text);
        margin: calc(var(--gap) * 0.83);
      }
      &__cros-icon {
        position: absolute;
        display: inline-block;
        right: calc(var(--gap) * 3.3);
        margin-top: calc(var(--gap) * 0.4);
        height: calc(var(--gap) * 2.5);
        width: calc(var(--gap) * 2.5);
        cursor: pointer;
      }
      &__button-wrapper {
        min-height: calc(var(--gap) * 10);
      }
      &__button {
        color: var(--color-white);
        background: var(--button-primary);
        border-radius: calc(var(--gap) * 3.38);
        font-size: calc(var(--gap) * 2.66);
        line-height: normal;
        font-style: normal;
        font-weight: normal;
        margin-left: 0;
        text-align: center;
        text-transform: uppercase;
        &--disabled {
          color: var(--button-dark-gray) !important;
          background: var(--button-disabled) !important;
        }
        &:hover {
          background: var(--button-hover);
        }
        &:active {
          background: var(--button-active);
        }
      }
    }
    .cr-email-form__option-inner {
      background: var(--transparent);
      width: 100%;
      height: calc(var(--gap) * 9.66);
      margin: 0 auto;
      text-align: center;
      text-transform: uppercase;
      line-height: calc(var(--gap) * 9.66);
      font-style: normal;
      font-size: calc(var(--gap) * 2.33);
      color: var(--white);
    }
    .cr-email-form__group--focused {
      .cr-email-form__label {
        color: var(--sign-in-accent);
      }
      input {
        border-color: var(--button-primary) !important;
      }
    }
  }
}

@media screen and (max-width: 768px) {
  .pg-change-password-screen {
    margin: calc(var(--gap) * 3.33) calc(var(--gap) * 1.66) 0;
    width: 100%;
  }
}
