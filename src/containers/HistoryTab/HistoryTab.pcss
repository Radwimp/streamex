.pg-history-tab {
    align-items: flex-start !important;
    background: var(--base-bright);
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding: 0 !important;
    margin-top: calc(var(--gap) * 2) !important;
    border-radius: var(--gap);
    max-width: 920px !important;

    .cr-pagination {
        text-align: center;
    }

    .pg-history-tab__tabs-content {
        align-items: flex-start;
        width: 100%;

        .cr-tab-panel__navigation-container {
            background: var(--table-dark-header-color);
            border-bottom: 1px solid var(--table-text-color) !important;
            border-top-left-radius: calc(var(--gap) * 0.66);
            border-top-right-radius: calc(var(--gap) * 0.66);
            margin-bottom: 0;

            &-navigation {
                margin: 10px;

                .cr-tab {
                    margin: auto 2px;
                    padding: calc(var(--gap) * 0.5) 0 !important;
                    width: calc(var(--big-gap) * 2.25);

                    &__active {
                        color: var(--header);
                        background: var(--color-white);
                        border-radius: calc(var(--gap) * 3.38);
                        font-weight: 400;

                        .cr-tab__pointer {
                            display: none;
                        }
                    }
                }
            }
        }
    }

    .pg-history-elem-empty {
        min-height: 50vh;
    }

    .pg-history-elem {
        &__empty {
            text-align: center;
            color: var(--table-text-color);
        }

        &__pagination {
            padding: var(--gap) calc(var(--gap) * 2);
        }

        .cr-table-container {
            padding: 0 calc(var(--gap) * 2);
            .cr-table-header__content {
                display: none;
            }
            .cr-table {
                background: var(--transparent);
                border-collapse: collapse;
                &__head {
                    margin: 10px;
                    &-row {
                        border-bottom: 1px solid var(--wallets-table-divider);
                        th {
                            background-color: var(--background-dark);
                            color: var(--table-text-color);
                            font-size: 12px !important;
                            font-weight: 500;
                            font-family: "Roboto", "Helvetica", "Arial", sans-serif;
                            padding: calc(var(--gap) * 2.7) 0 calc(var(--gap) * 2.7) !important;
                            text-align: right;
                            position: static;
                            width: calc(var(--big-gap) * 2);

                            &:first-child {
                                text-align: left;
                                margin-left: 10px;
                            }

                            &:nth-child(7) {
                                white-space: nowrap;
                            }
                        }
                    }
                }
                &__body {
                    background-color: var(--background-dark);
                    tr {
                        background-color: var(--background-dark);
                        border-bottom: 1px solid var(--wallets-table-divider);
                        td {
                            background-color: var(--background-dark);
                            color: var(--table-text-color);
                            font-size: 13px !important;
                            font-weight: 400;
                            padding: calc(var(--gap) * 2.7) 0 calc(var(--gap) * 2.7) !important;
                            margin-top: calc(var(--gap) * 1.66) !important;
                            margin-bottom: calc(var(--gap) * 1.66) !important;
                            text-align: right;

                            &:first-child {
                                text-align: left;
                            }
                            &:last-child {
                                &:first-letter {
                                    text-transform: uppercase;
                                }
                            }
                            a {
                                color: var(--table-text-color);
                                text-decoration: none;
                            }
                        }
                    }
                }
            }
        }
    }
}
